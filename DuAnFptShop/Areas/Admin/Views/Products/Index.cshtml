@model IEnumerable<DuAnFptShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }

    .form-horizontal {
        width: 100%;
        background-color: #ffffff;
    }

    .header {
        width: 100%;
    }

    .header-content {
        width: 100%;
        background-color: #E1EDDB;
        color: #91A990;
        height: 50px;
        padding: 0px 20px;
        font-weight: bold;
    }

        .header-content h4 {
            line-height: 50px;
        }

    .list-content{
        width:100%;
    }

    .table{
        width:1400px;
    }

    th {
        font-size: 14px;
    }

    .btn-Edit {
        background-color: darkred;
        margin-bottom: 3px;
    }

    .btn-Details {
        background-color: darkblue;
        margin-bottom: 3px;
    }

    .btn-Delete {
        background-color: darkgreen;
        margin-bottom: 3px;
    }

    .btn a {
        color: white;
        text-decoration: none;
    }

    .btn-Edit:hover {
        background-color: red;
    }

    .btn-Details:hover {
        background-color: blue;
    }

    .btn-Delete:hover {
        background-color: green;
    }

    .btn-default {
        border: 1px solid #CFD5DB;
        border-radius: 5px;
    }

        .btn-default:hover {
            background-color: peachpuff;
        }

        .btn-default a {
            text-decoration: none;
            color: #212529;
        }
</style>

<div class="header">
    <div class="container">
        <div class="header-content">
            <h4>Danh sách</h4>
        </div>
    </div>
</div>

<div class="list">
    <div class="container">
        <div class="list-content">
            <table class="table">
                <tr>
                    <th>
                        Hình sản phẩm
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Mô tả tổng quát
                    </th>
                    <th>
                        Màn hình
                    </th>
                    <th>
                        Camera trước
                    </th>
                    <th>
                        Camera selfie
                    </th>
                    <th>
                        Cpu
                    </th>
                    <th>
                        Dung lượng Pin
                    </th>
                    <th>
                        Sim
                    </th>
                    <th>
                        Hệ điều hành
                    </th>
                    <th>
                        Xuất xứ
                    </th>
                    <th>
                        Năm sản xuất
                    </th>
                    <th>
                        Thương hiệu
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.ProImage)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProDecription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Screen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Camera)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CameraSelfie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Battery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sim)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OperatingSystem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Origin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaunchTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CateName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PerformanceBattery.Performance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ScreenSize.Size)
                        </td>*@
                        <td>
                            <button class="btn btn-Edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) </button>
                            <button class="btn btn-Details"> @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) </button>
                            <button class="btn btn-Delete"> @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }) </button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<div class="list-btn">
    <div class="container">
        <div class="list-btn-content">
            <button class="btn btn-default">
                @Html.ActionLink("Thêm mới", "Create")
            </button>
        </div>
    </div>
</div>

@model IEnumerable<DuAnFptShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }

    .form-horizontal {
        width: 100%;
        background-color: #ffffff;
    }

    .header {
        width: 100%;
    }

    .header-content {
        width: 100%;
        background-color: #E1EDDB;
        color: #91A990;
        height: 50px;
        padding: 0px 20px;
        font-weight: bold;
    }

        .header-content h4 {
            line-height: 50px;
        }

    .list-content {
        width: 100%;
    }

    .table {
        width: 100%;
    }

    th {
        font-size: 14px;
    }

    .btn-Edit {
        background-color: darkred;
        margin-bottom: 3px;
    }

    .btn-Details {
        background-color: darkblue;
        margin-bottom: 3px;
    }

    .btn-Delete {
        background-color: darkgreen;
        margin-bottom: 3px;
    }

    .btn a {
        color: white;
        text-decoration: none;
    }

    .btn-Edit:hover {
        background-color: red;
    }

    .btn-Details:hover {
        background-color: blue;
    }

    .btn-Delete:hover {
        background-color: green;
    }

    .btn-default {
        border: 1px solid #CFD5DB;
        border-radius: 5px;
    }

        .btn-default:hover {
            background-color: peachpuff;
        }

        .btn-default a {
            text-decoration: none;
            color: #212529;
        }
</style>

<div class="header">
    <div class="container">
        <div class="header-content">
            <h4>Danh sách</h4>
        </div>
    </div>
</div>

<div class="list">
    <div class="container">
        <div class="list-content">
            <table class="table">
                <tr>
                    <th>

                    </th>
                    <th>
                        Hình sản phẩm
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Mô tả tổng quát
                    </th>
                    <th>
                        Xuất xứ
                    </th>
                    <th>
                        Năm sản xuất
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>
                            <img src="@Url.Content(item.ProImage)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProDecription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Origin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LaunchTime)
                        </td>
                        <td>
                            <button class="btn btn-Edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }) </button>
                            <button class="btn btn-Details"> @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }) </button>
                            <button class="btn btn-Delete"> @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }) </button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<div class="list-button">
    <div class="container">
        <div class="list-button-content">
            <button class="btn btn-default">chọn tất cả</button>
            <button class="btn btn-default">Bỏ chọn tất cả</button>
            <button class="btn btn-default">Xóa các mục chọn</button>
            <button class="btn btn-default">
                @Html.ActionLink("Nhập thêm", "Create")
            </button>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btn-default:contains('chọn tất cả')").click(function () {
            $("input[type='checkbox']").prop('checked', true);
        });
        $(".btn-default:contains('Bỏ chọn tất cả')").click(function () {
            $("input[type='checkbox']").prop('checked', false);
        });
        $(".btn-default:contains('Xóa các mục chọn')").click(function () {
            $("input[type='checkbox']:checked").prop('checked', false);
        });
    });
</script>
@model IEnumerable<DuAnFptShop.Models.ProductSlider>

<style>
    .paramNews-slider {
        width: 100%;
        position: relative;
    }

    .paramNews-slider-content {
        width: 100%;
        height: 374px;
        display: flex;
        position: relative;
        transition: 0.3s;
    }

        .paramNews-slider-content img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .paramNews-dots ul {
        position: absolute;
        display: flex;
        justify-content: center;
        bottom: -30px;
        width: 100%;
    }

        .paramNews-dots ul li {
            width: 40px;
            height: 3px;
            background-color: #CCCCCC;
            margin: 0 2px;
            border-radius: 1px;
            cursor: pointer;
        }

            .paramNews-dots ul li.active {
                background-color: #CD1817;
            }
</style>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <div class="paramNews-slider">
        <div class="paramNews-slider-content">
            @foreach (var item in Model)
            {
                <img src="@Url.Content(item.ProductSliderImage)" />
            }
        </div>
        <div class="paramNews-dots">
            <ul>
                <li class="active"></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </div>
</body>
<script defer src="~/Scripts/ProductDetailJS.js"></script>

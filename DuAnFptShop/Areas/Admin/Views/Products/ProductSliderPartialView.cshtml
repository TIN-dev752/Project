@model IEnumerable<DuAnFptShop.Models.ProductSlider>

<style>
    .product-slider {
        width: 100%;
        position: relative;
        margin-top: 20px;
    }

    .product-slider-content {
        width: 100%;
        display: flex;
        position: relative;
        border: 1px solid #E4E7EB;
        border-radius: 10px;
        padding: 40px 0;
        transition: 0.3s;
    }

        .product-slider-content img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .porduct-slider-btn {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
    }


        .porduct-slider-btn i {
            color: #7F8489;
            font-size: 32px;
            height: 50px;
            width: 50px;
            background-color: #FFFFFF;
            display: flex;
            justify-content: center;
            align-items: center;
            transform: translateY(-50%);
            border: 1px solid #E4E7EB;
            border-radius: 100%;
            opacity: 0.8;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .porduct-slider-btn i:hover {
                opacity: 1;
            }


    .dots ul {
        position: absolute;
        width: 100%;
        bottom: -40px;
        display: flex;
        justify-content: center;
    }

        .dots ul li {
            width: 10px;
            height: 10px;
            margin: 10px;
            background-color: #F5F6F8;
            border-radius: 20px;
            transition: 1s;
            cursor: pointer;
        }

            .dots ul li.active {
                background-color: #D1281E;
                width: 30px;
            }
</style>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <div class="product-slider">
        <div class="product-slider-content">
            @foreach (var item in Model)
            {
                <img src="@Url.Content(item.ProductSliderImage)" />
            }
        </div>
        <div class="porduct-slider-btn">
            <div id="prev"><i class="fa-solid fa-chevron-left"></i></div>
            <div id="next"><i class="fa-solid fa-chevron-right"></i></div>
        </div>
        <div class="dots">
            <ul>
                <li class="active"></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </div>
</body>
<script defer src="~/Scripts/ProductDetailJS.js"></script>

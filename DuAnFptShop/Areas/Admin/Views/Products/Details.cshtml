@model DuAnFptShop.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container {
        width: 1200px;
        margin: 0 auto;
    }

    /*------------------------------------------header-----------------------------------------------------*/

    .header {
        width: 100%;
    }

    .header-content {
        width: 100%;
        background-color: #E1EDDB;
        color: #91A990;
        height: 50px;
        padding: 0px 20px;
        font-weight: bold;
    }

        .header-content h4 {
            line-height: 50px;
        }

    .control-label {
        width: 100%;
        font-weight: bold;
        margin-bottom: 10px;
    }

    dt, dd {
        padding: 5px 20px;
    }

    dd {
        border-bottom: 1px solid #9B9D9E;
    }

    .btn-default {
        border: 1px solid #CFD5DB;
        border-radius: 5px;
        margin-top: 10px;
    }

        .btn-default:hover {
            background-color: peachpuff;
        }

        .btn-default a {
            text-decoration: none;
            color: #212529;
        }

    /*----------------------------------------------product-top---------------------------------------------*/

    .product-top {
        width: 100%;
        height: auto;
    }

    .product-top-content {
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding-bottom: 15px;
        border-bottom: 1px solid #DEE2E6;
    }

        .product-top-content h1 {
            font-size: 24px;
            color: #212529;
        }

            .product-top-content h1 span {
                font-size: 12px;
                color: #99A2AA;
            }

        .product-top-content ul {
            display: flex;
            justify-content: right;
        }

            .product-top-content ul li {
                padding: 0 5px;
            }

                .product-top-content ul li:nth-child(1) {
                    color: #EA9D02;
                }

                .product-top-content ul li a {
                    color: #0168FA;
                    font-size: 15px;
                    position: relative;
                }

                    .product-top-content ul li a:before {
                        content: "";
                        height: 2px;
                        width: 0;
                        position: absolute;
                        right: 0;
                        bottom: -4px;
                        background-color: #0168FA;
                        transition: 0.3s;
                    }

                    .product-top-content ul li a:hover:before {
                        width: 100%;
                    }

    /*-------------------------------------------------------product detail left------------------------------------------------------------------------*/

    .product-detail {
        width: 100%;
        background-color: #FFFFFF;
        height: 920px;
    }

    .product-detail-content {
        width: 100%;
        display: flex;
    }

    .product-detail-left {
        width: 50%;
        height: 100%;
        overflow: hidden;
    }

    /*-------------------------------------product slider feature-----------------------------------*/

    .product-slider-feature {
        margin-top: 20px;
        width: 100%;
        height: auto;
        text-align: center;
    }

        .product-slider-feature ul {
            display: flex;
            justify-content: center;
        }

            .product-slider-feature ul li {
                margin: 30px 20px;
            }

                .product-slider-feature ul li:hover a, .product-slider-feature ul li:hover p {
                    color: #0168fa;
                    cursor: pointer;
                }

                .product-slider-feature ul li a {
                    color: #495057;
                }

                .product-slider-feature ul li i {
                    font-size: 40px;
                    margin: 10px;
                }

                .product-slider-feature ul li p {
                    font-size: 14px;
                }

    /*--------------------------------------product param---------------------------------------*/

    .product-param {
        width: 100%;
        height: auto;
        border: 1px solid #E9ECEF;
        border-radius: 5px;
        background-color: #F8F9FA;
        margin-top: 15px;
        padding-bottom: 20px;
    }

        .product-param ul li i {
            display: inline-block;
            width: 58px;
            height: auto;
            padding: 10px 20px;
            color: #B6BFC7;
        }

        .product-param ul li p {
            display: inline-block;
            color: #495057;
        }

        .product-param a {
            color: #0168FA;
            position: relative;
            font-size: 14px;
            margin: 0 10px;
            cursor: pointer;
        }

            .product-param a:after {
                content: "";
                width: 0;
                height: 1px;
                position: absolute;
                left: 0;
                bottom: -4px;
                background-color: #0168FA;
                transform-origin: center;
                transform: scaleX(0);
                transition: transform 0.3s ease-in-out;
            }

            .product-param a:hover:after {
                width: 100%;
                transform: scaleX(1);
            }

    /*------------------------------------product policy-------------------------------------*/
    .product-policy {
        width: 100%;
        display: flex;
        justify-content: left;
    }

        .product-policy p {
            padding: 20px 10px;
            color: #444B52;
            font-size: 14px;
        }

        .product-policy span i {
            padding: 20px 10px;
            color: #CB1C22;
        }

    /*----------------------------------product detail right-----------------------------------*/

    .product-detail-right {
        width: 50%;
    }

    .product-price {
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 20px 0 20px 20px;
    }

    .product-price-left {
        width: 70%;
    }

        .product-price-left p:nth-child(1) {
            color: #CB1C22;
            font-size: 32px;
            font-weight: bold;
            display: inline-block;
            padding: 0 5px;
        }

            .product-price-left p:nth-child(1) span {
                text-decoration: underline;
            }

        .product-price-left p:nth-child(2) {
            color: #99A2AA;
            text-decoration: line-through;
            font-size: 20px;
            display: inline-block;
        }

            .product-price-left p:nth-child(2) span {
                text-decoration: underline;
            }

    .product-price-right {
        width: 30%;
    }

        .product-price-right p {
            color: #555555;
            text-align: right;
        }

    /*------------------------------------------------------------select color-------------------------------------------------*/

    .select-color {
        width: 100%;
        display: flex;
        margin: 30px 10px;
    }

    .product-color-img {
        margin: 10px;
        text-align: center;
        position: relative;
    }

        .product-color-img i {
            position: absolute;
            left: 0px;
            top: 20%;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            color: #FFFFFF;
            font-weight: bold;
            display: none;
        }

        .product-color-img img {
            width: 44px;
            height: 44px;
            object-fit: cover;
            padding: 5px;
        }

            .product-color-img img.active {
                border: 1px solid #CB1C22;
                border-radius: 5px;
            }

                .product-color-img img.active + i {
                    display: block;
                }

                .product-color-img img.active + p {
                    font-weight: bold;
                }

        .product-color-img:hover img {
            border: 1px solid #CB1C22;
            border-radius: 5px;
        }

        .product-color-img:hover p {
            font-weight: bold;
        }

        .product-color-img:hover i {
            display: block;
        }

    /*-----------------------------------------------------product discount-----------------------------------------------*/

    .product-discount {
        width: 100%;
        background-color: #F8F9FA;
        margin: 20px;
    }

    .product-discount-title {
        border: 1px solid #E9ECEF;
        border-radius: 5px 5px 0 0;
        font-weight: bold;
        font-size: 14px;
        padding: 10px;
    }

    .radio-discount {
        width: 100%;
        border: 1px solid #E9ECEF;
    }

        .radio-discount ul li {
            display: flex;
            justify-content: left;
            padding: 4px 10px;
        }

            .radio-discount ul li input {
                margin-right: 10px;
            }

            .radio-discount ul li p {
                font-size: 14px;
                font-weight: 550;
                color: #444B52;
            }

    .product-discount-content span {
        color: #0168FA;
        position: relative;
        cursor: pointer;
    }

    .product-discount-content > ul > li > span {
        color: #212529;
        background-color: #E9ECEF;
        cursor: text;
        font-size: 14px;
    }

        .product-discount-content > ul > li > span:after {
            background-color: #E9ECEF;
        }

    .product-discount-content > span {
        font-size: 14px;
    }

    .product-discount-content span:after {
        content: "";
        width: 0;
        height: 1px;
        position: absolute;
        left: 0;
        bottom: -1px;
        background-color: #0168FA;
        transform-origin: center;
        transform: scaleX(0);
        transition: transform 0.3s ease-in-out;
    }

    .product-discount-content span:hover:after {
        transform: scaleX(1);
        width: 100%;
    }

    .product-discount-content ul li {
        display: flex;
        padding: 4px 10px;
    }

        .product-discount-content ul li i {
            color: #48BB78;
            margin-right: 10px;
        }

        .product-discount-content ul li p {
            color: #444B52;
            font-size: 14px;
        }

    .product-discount-content-expand {
        display: none;
    }

    /*----------------------------------------payment discount-----------------------------------*/

    .payment-discount {
        width: 100%;
    }

    .payment-discount-content {
        margin: 10px 20px;
        display: flex;
    }

    .payment-discount-img {
        border: 1px solid #DEE2E6;
        border-radius: 10px;
        position: relative;
        margin-right: 10px;
    }

        .payment-discount-img input {
            position: absolute;
            left: 2px;
            bottom: 2px;
        }

        .payment-discount-img img {
            padding: 5px;
            width: 60px;
            height: 60px;
            object-fit: cover;
        }

    .payment-discount-text h3, .payment-discount-text p {
        color: #444B52;
    }

    .payment-discount-text span {
        color: #0168FA;
        position: relative;
        cursor: pointer;
        font-size: 14px;
    }

        .payment-discount-text span:after {
            content: "";
            width: 0;
            height: 1px;
            position: absolute;
            left: 0;
            bottom: -1px;
            background-color: #0168FA;
            transform-origin: center;
            transform: scaleX(0);
            transition: transform 0.3s ease-in-out;
        }

        .payment-discount-text span:hover:after {
            width: 100%;
            transform: scaleX(1);
        }

    /*---------------------------------------------located-----------------------------------------------*/
    .located {
        width: 100%;
        margin: 20px;
        font-size: 14px;
        display: flex;
        justify-content: space-between;
    }

        .located p {
            color: #444B52;
        }

            .located p span {
                color: #CB1C22;
                font-weight: 700;
                cursor: pointer;
            }

                .located p span:hover {
                    color: #000000;
                }

        .located > span {
            color: #0168FA;
            position: relative;
            cursor: pointer;
        }

            .located > span:after {
                content: "";
                position: absolute;
                height: 1px;
                background-color: #0168FA;
                left: 0;
                bottom: -2px;
                transform-origin: center;
                transform: scaleX(0);
                transition: transform 0.3s ease-in-out;
            }

            .located > span:hover:after {
                width: 100%;
                transform: scaleX(1);
            }

    /*--------------------------------------------------------paramNews------------------------------------------------------------*/

    .paramNews {
        width: 100%;
        background-color: #F8F9FA;
    }

    .paramNews-content {
        width: 100%;
        background-color: #FFFFFF;
        display: flex;
        margin-top: 150px;
    }

    .paramNews-content-left {
        width: 55%;
        height: auto;
        overflow: hidden;
        margin: 0 20px;
        border: 1px solid #EEF1F3;
        border-radius: 10px;
    }

        .paramNews-content-left > h3 {
            color: #212529;
            padding: 20px;
        }
        /*-----------------------------------------*/

        .paramNews-content-left h3 {
            color: #212529;
            font-size: 16px;
        }

        .paramNews-content-left p {
            color: #495057;
            margin: 0 20px;
        }

        .paramNews-content-left img {
            width: 95%;
            height: auto;
            object-fit: cover;
            margin: 0 20px;
        }

        .paramNews-content-left span {
            color: #0168FA;
            cursor: pointer;
        }

            .paramNews-content-left span a {
                color: #0168FA;
                cursor: pointer;
            }

            .paramNews-content-left span:hover {
                color: #212529;
            }

                .paramNews-content-left span:hover a {
                    color: #212529;
                }

        .paramNews-content-left .expand-button {
            width: 100%;
            text-align: center;
        }

        .paramNews-content-left button {
            width: 80px;
            height: 30px;
            border: 1px solid #7987A1;
            border-radius: 5px;
            color: #495057;
            text-align: center;
            line-height: 30px;
            cursor: pointer;
        }

        .paramNews-content-left .expand-content {
            display: none;
        }

    .expand-content h3 {
        margin: 0 20px;
    }
    /*------------------------------------------------paramNews content right--------------------------------------------------*/
    .paramNews-content-right {
        width: 45%;
        margin: 20px;
    }

    .paramNews-content-right-top {
        width: 100%;
        border: 1px solid #EDEFF2;
        padding: 20px;
    }

        .paramNews-content-right-top > h3 {
            color: #212529;
            padding-bottom: 20px;
        }

        .paramNews-content-right-top > table {
            width: 100%;
            border-collapse: collapse;
            color: #444B52;
        }

            .paramNews-content-right-top > table tr td {
                padding: 8px;
                border: 1px solid #DEE2E6;
            }

            .paramNews-content-right-top > table tr:nth-child(odd) {
                background-color: #F3F4F7;
            }

        .paramNews-content-right-top .table-view-detail-btn2 > a {
            color: #0168FA;
            margin: 15px 0;
            position: relative;
            cursor: pointer;
        }

            .paramNews-content-right-top .table-view-detail-btn2 > a:after {
                content: "";
                position: absolute;
                height: 2px;
                background-color: #0168FA;
                left: 0;
                bottom: -2px;
                transform-origin: center;
                transform: scaleX(0);
                transition: transform 0.3s ease-in-out;
            }

            .paramNews-content-right-top .table-view-detail-btn2 > a:hover:after {
                width: 100%;
                transform: scaleX(1);
            }

        .paramNews-content-right-top .table-view-detail-btn2 {
            width: 100%;
            text-align: center;
            padding: 10px;
        }

    /*---------------------------------------table view detail---------------------------------------*/

    .table-view-detail {
        position: fixed;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.6);
        top: 0;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: auto;
        z-index: 1000;
        display: none;
    }

    .table-view-detail-content-wrapper {
        width: 800px;
        height: auto;
        background-color: white;
        border-radius: 5px;
        position: absolute;
        top: 20%;
    }

        .table-view-detail-content-wrapper h2 {
            padding: 20px;
            color: #212529;
            width: 100%;
            height: 64px;
            position: relative;
            border-bottom: 1px solid #DEE2E6;
        }

            .table-view-detail-content-wrapper h2 span {
                position: absolute;
                right: 30px;
                font-size: 18px;
                color: #A9B0B6;
                cursor: pointer;
            }

                .table-view-detail-content-wrapper h2 span:hover {
                    color: #444b52;
                }

    .table-view-detail-content {
        width: 100%;
        background-color: #FFFFFF;
    }

        .table-view-detail-content > img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            padding: 20px;
        }

        .table-view-detail-content h3 {
            width: 100%;
            padding: 10px 20px;
            color: #464646;
            font-size: 16px;
            border-bottom: 1px solid #DEE2E6;
            background-color: #F8F9FA;
        }

    .table-view-detail-list {
        padding: 0 20px;
    }

        .table-view-detail-list ul {
            display: flex;
            flex-wrap: wrap;
            padding: 10px 10px 30px 10px;
        }

            .table-view-detail-list ul li {
                width: 47%;
                margin: 10px;
                color: #495057;
                list-style-type: disc;
            }

    .table-view-detail-table {
        width: 100%;
        border-collapse: collapse;
    }

        .table-view-detail-table tr {
            border: 1px solid #EDEEEF;
        }

            .table-view-detail-table tr td {
                padding: 8px 20px;
            }

        .table-view-detail-table p {
            padding: 20px;
        }

        .table-view-detail-table tr td:nth-child(1) {
            width: 200px;
            height: 36px;
            color: #99A2AA;
        }

        .table-view-detail-table tr td:nth-child(2) {
            width: auto;
            height: auto;
            color: #495057;
        }

    .table-view-detail-content .a-black {
        color: #0168FA;
        cursor: pointer;
    }

        .table-view-detail-content .a-black:hover {
            color: #495057;
        }

    .table-view-detail-content .a-blue {
        color: #0168FA;
        cursor: pointer;
        position: relative;
    }

        .table-view-detail-content .a-blue:after {
            content: "";
            position: absolute;
            left: 0;
            bottom: -2px;
            background-color: #0168FA;
            transform-origin: center;
            transform: scaleX(0);
            height: 2px;
            transition: transform 0.3s ease-in-out;
        }

        .table-view-detail-content .a-blue:hover:after {
            width: 100%;
            transform: scaleX(1);
        }

    .table-view-detail-wrapper {
        display: flex;
        flex-wrap: wrap;
    }

        .table-view-detail-wrapper p:nth-child(1) {
            padding: 15px 20px;
            width: 100%;
        }

        .table-view-detail-wrapper table {
            width: 45%;
            border-collapse: collapse;
            margin: 10px;
        }

            .table-view-detail-wrapper table tr {
                border: 1px solid #E9ECEF;
            }

                .table-view-detail-wrapper table tr:first-child {
                    color: #464646;
                    font-weight: bold;
                }

                .table-view-detail-wrapper table tr:nth-child(n + 2) td:first-child {
                    color: #99A2AA;
                }

                .table-view-detail-wrapper table tr td {
                    padding: 10px;
                }

        .table-view-detail-wrapper p {
            padding: 20px;
        }

        .table-view-detail-wrapper > a {
            padding: 20px 0;
            margin-left: 200px;
        }

    .table-view-detail-content .table-view-detail-table i {
        width: 50px;
        height: 50px;
        text-align: center;
        line-height: 50px;
        background-color: #E9ECEF;
        border-radius: 50%;
        color: #495057;
    }

    /*------------------------------------------paramNews-content-right-bottom-----------------------------*/
    .paramNews-content-right-bottom {
        width: 100%;
        padding: 20px;
        border: 1px solid #EDEFF2;
        border-radius: 5px;
        margin-top: 30px;
    }

        .paramNews-content-right-bottom h2 {
            font-size: 16px;
            color: #212529;
            font-weight: 800;
            display: inline-block;
        }

        .paramNews-content-right-bottom > a {
            display: inline-block;
            color: #0168FA;
            margin-left: 5px;
            font-size: 14px;
            position: relative;
            cursor: pointer;
        }

            .paramNews-content-right-bottom > a:after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -2px;
                background-color: #0168FA;
                transform-origin: center;
                transform: scaleX(0);
                height: 2px;
                transition: transform 0.3s ease-in-out;
            }

            .paramNews-content-right-bottom > a:hover:after {
                width: 100%;
                transform: scaleX(1);
            }

    /*--------------------------------------------------questions-----------------------------------------------------*/
    .questions {
        width: 100%;
        background-color: #F8F9FA;
    }


    /*-----------------------------------------advisory----------------------------------------*/
    .advisory {
        width: 100%;
        background-color: #F8F9FA;
    }

    .advisory-content {
        width: 100%;
        background-color: #FFFFFF;
        padding: 20px;
    }

        .advisory-content .advisory-title {
            width: 100%;
            display: flex;
            justify-content: space-between;
            padding-bottom: 20px;
        }

            .advisory-content .advisory-title h2 {
                color: #212529;
                font-size: 20px;
            }

            .advisory-content .advisory-title a {
                color: #0168FA;
                font-size: 14px;
                position: relative;
                cursor: pointer;
            }

                .advisory-content .advisory-title a:after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: 2px;
                    background-color: #0168FA;
                    transform-origin: center;
                    transform: scaleX(0);
                    height: 2px;
                    transition: transform 0.3s ease-in-out;
                }

                .advisory-content .advisory-title a:hover:after {
                    width: 100%;
                    transform: scaleX(1);
                }
</style>


<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/ProductDetailCSS.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="header-content">
                <h4>Xem chi tiết sản phẩm</h4>
            </div>
        </div>
    </div>
    <div class="product-top">
        <div class="container">
            <div class="product-top-content">
                <h1>@Html.DisplayFor(model => model.ProName)</h1>
            </div>
        </div>
    </div>
    <section class="product-detail">
        <div class="container">
            <div class="product-detail-content">
                <div class="product-detail-left">
                    @Html.Action("ProductSliderPartialView", "Products")
                    <div class="product-slider-feature">
                        <ul>
                            <li>
                                <a href=""><i class="fa-regular fa-images"></i></a>
                                <p>Xem thêm 14 ảnh</p>
                            </li>
                            <li>
                                <a href=""><i class="fa-solid fa-box-open"></i></a>
                                <p>Trong hộp có gì  </p>
                            </li>
                            <li>
                                <a href=""><i class="fa-solid fa-camera-rotate"></i></a>
                                <p>Ảnh 360 độ</p>
                            </li>
                        </ul>
                    </div>
                    <div class="product-param">
                        <ul>
                            <li><i class="fa-solid fa-mobile-screen"></i><p title="Màn hình">@Model.Screen</p></li>
